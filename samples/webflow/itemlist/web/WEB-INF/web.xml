<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp">
	<filter>
		<filter-name>flowCleanup</filter-name>
		<filter-class>org.springframework.web.flow.support.FlowExecutionCleanupFilter</filter-class>
		<init-param>
			<param-name>timeout</param-name>
			<param-value>1</param-value> <!-- 1 minute timeout for demo purposes -->
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>flowCleanup</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>itemList</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>itemList</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
