<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix"><value>/WEB-INF/jsp/</value></property>
		<property name="suffix"><value>.jsp</value></property>
	</bean>

	<bean id="frontController" name="/flow.htm" class="org.springframework.web.flow.mvc.FlowController">
		<property name="cacheSeconds"><value>5</value></property>
		<property name="flowExecutionManager">
			<bean class="org.springframework.web.flow.execution.servlet.ServletFlowExecutionManager">
				<property name="storage">
					<bean class="org.springframework.web.flow.execution.servlet.SessionContinuationFlowExecutionStorage"/>
				</property>
				<property name="listener">
					<bean class="org.springframework.samples.flowlauncher.SampleFlowExecutionListener"/>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="sampleA" class="org.springframework.web.flow.config.XmlFlowFactoryBean">
		<property name="location" value="/WEB-INF/sampleA-flow.xml"/>
	</bean>

	<bean id="sampleB" class="org.springframework.web.flow.config.XmlFlowFactoryBean">
		<property name="location" value="/WEB-INF/sampleB-flow.xml"/>
	</bean>

</beans>