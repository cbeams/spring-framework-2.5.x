<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE webflow PUBLIC "-//SPRING//DTD WEBFLOW//EN"
	"http://www.springframework.org/dtd/spring-webflow.dtd">

<webflow id="person.Detail" start-state="getDetails">

	<action-state id="getDetails">
		<action class="org.springframework.samples.phonebook.web.flow.action.GetPersonAction" autowire="byType"/>
		<transition on="success" to="displayDetails"/>
		<transition on="error" to="error"/>
	</action-state>

	<view-state id="displayDetails" view="person.Detail.view">
		<transition on="back" to="finish"/>
		<transition on="select" to="showColleagueDetails"/>
	</view-state>

	<subflow-state id="showColleagueDetails" flow="person.Detail">
		<attribute-mapper>
			<input value="${sourceEvent.parameters.colleagueId}" as="id" type="long"/>
		</attribute-mapper>
		<transition on="finish" to="getDetails"/>
		<transition on="error" to="error"/>
	</subflow-state>
	
	<end-state id="finish"/>
	
	<end-state id="error" view="error.view"/>
	
</webflow>