<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE webflow PUBLIC "-//SPRING//DTD WEBFLOW//EN"
	"http://www.springframework.org/dtd/spring-webflow.dtd">

<webflow id="search" start-state="displayCriteria">

	<view-state id="displayCriteria" view="person.Search.criteria.view">
		<setup bean="person.Search.criteria.formAction" method="setupForm"/>
		<transition on="submit" to="executeQuery">
			<action bean="person.Search.criteria.formAction" method="bindAndValidate"/>
			<property name="submitPressed" value="true" type="boolean"/>
		</transition>
	</view-state>
	
	<action-state id="executeQuery">
		<action bean="person.Search.executeQuery"/>
		<transition on="success" to="displayResults"/>
	</action-state>
	
	<view-state id="displayResults" view="person.Search.results.view">
		<transition on="newSearch" to="displayCriteria"/>
		<transition on="select" to="showDetails"/>
	</view-state>

	<subflow-state id="showDetails" flow="person.Detail">
		<attribute-mapper>
			<input value="${originatingEvent.id}" as="id"/>
		</attribute-mapper>
		<transition on="finish" to="executeQuery"/>
		<transition on="error" to="error"/>
	</subflow-state>
	
	<end-state id="error" view="error.view"/>
	
</webflow>